<div class="page-header">
  <span class="h2">流程模型字段管理</span>
  <span class="pull-right"><%= link_to "新建", new_workflow_work_category_path, class: 'btn btn-success' %></span>
</div>


<table class="table table-striped">
  <thead>
  <tr>
    <th>模型名称</th>
    <th>字段名称</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @work_categories.each do |work_category| %>
    <tr id="work_category<%= work_category.id %>">
      <td><%= link_to work_category.name, workflow_work_category_path(work_category) %></td>
      <td><%= work_category.column_name %></td>
      <td><%= link_to "编辑", edit_workflow_work_category_path(work_category), class: 'btn btn-link' %></td>
      <td><%= render 'delete_form', work_category: work_category %></td>
    </tr>
  <% end %>
  </tbody>
</table>
